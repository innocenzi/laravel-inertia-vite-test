{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "lib": ["esnext", "dom"],
        "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }]
    },
    "include": [
        "resources/scripts/**/*.ts",
        "resources/scripts/**/*.d.ts",
        "resources/scripts/**/*.vue"
    ]
}
